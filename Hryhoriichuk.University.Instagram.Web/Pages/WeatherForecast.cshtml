@page
@model WeatherForecastModel
@{
    ViewData["Title"] = "Weather Forecast";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Forecasts[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Forecasts[0].Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Forecasts[0].TemperatureC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Forecasts[0].TemperatureF)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Forecasts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Summary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TemperatureC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TemperatureF)
                </td>
            </tr>
        }
    </tbody>
</table>
